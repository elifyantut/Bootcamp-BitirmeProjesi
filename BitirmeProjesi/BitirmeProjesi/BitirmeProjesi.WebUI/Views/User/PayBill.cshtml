
@model CreditCardViewModel

    <div>
        <h1>Daire No : @ViewBag.Invoice.Circle.Number</h1>
        <h2>Toplam Fatura Tutarı : @ViewBag.TotalBill </h2>
    </div>

<div class="container">
    <div class="row">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-8">
            <form asp-controller="User" asp-action="PayBill" method="post">
                <div class="form-group">
                    <label asp-for="CardNumber" class="col-form-label"></label>
                    <input asp-for="CardNumber" class="form-control" />
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ValidMonth" class="col-form-label"></label>
                    <input asp-for="ValidMonth" class="form-control" />
                    <span asp-validation-for="ValidMonth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ValidYear" class="col-form-label"></label>
                    <input asp-for="ValidYear" class="form-control" />
                    <span asp-validation-for="ValidYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cvv" class="col-form-label"></label>
                    <input asp-for="Cvv" class="form-control" />
                    <span asp-validation-for="Cvv" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Owner" class="col-form-label"></label>
                    <input asp-for="Owner" class="form-control" />
                    <span asp-validation-for="Owner" class="text-danger"></span>
                </div>
                
                <input type="hidden" asp-for="Money" value="@ViewBag.TotalBill" />
                <input type="hidden" name="InvoiceId" value="@ViewBag.Invoice.Id" />

                <div>
                    <input type="submit" value="Create Apartment" class="btn btn-primary" />
                </div>
            </form>
        </div>

    </div>
</div>


